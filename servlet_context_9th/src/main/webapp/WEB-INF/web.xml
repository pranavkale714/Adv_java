<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <servlet-mapping>
    <!--provide any servlet as you want-->
    <servlet-name>demo</servlet-name>
    <!--enter url pattern as you want-->
    <url-pattern>/myservlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <!--provide same name as above servlet name-->
    <servlet-name>demo</servlet-name>
    <!--package name.servlet_class_name-->
    <servlet-class>context.context_demo</servlet-class>  
  </servlet>
  
   <!--method provide by servletcontext interface -->
  <context-param>
   <!--it has param name and value associated with it-->
  <param-name>name</param-name>
  <param-value>pranav</param-value>
  </context-param>
  
   <context-param>
  <param-name>mobile_no</param-name>
  <param-value>7517914469</param-value>
  </context-param>
  

</web-app>